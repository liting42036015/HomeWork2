<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:layout_width="match_parent"
    android1:layout_height="match_parent"
    android1:orientation="vertical">

    <TextView
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="@string/height"
        />

    <EditText
        android1:id="@+id/height"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:text=""
        />

    <TextView
        android1:layout_width= "match_parent"
        android1:layout_height="wrap_content"
        android1:text="@string/weight"
        />

    <EditText
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:id="@+id/weight"
        android1:text=""
        />

    <Button
        android1:id="@+id/submit"
        android1:layout_width = "match_parent"
        android1:layout_height="wrap_content"
        android1:text="@string/btn_name"
        />

    <TextView
        android1:id="@+id/result"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:text=""
        />

    <TextView
        android1:id="@+id/suggest"
        android1:layout_height="wrap_content"
        android1:layout_width="match_parent"
        android1:text=""
        />
</LinearLayout>